<h2>Show user</h2>

<img src="<%= Digiramp.Avatar.url({@user.avatar, @user}, :thumb) %>" class="img-thumbnail">

<ul>
  <li>
    <strong>Name:</strong>
    <%= @user.name %>
  </li>

  <li>
    <strong>Email:</strong>
    <%= @user.email %>
  </li>

 

</ul>

<%= link "Edit", to: user_path(@conn, :edit, @user) %>
<%= link "Back", to: user_path(@conn, :index) %>
